= form_for @user, :url => password_reset_path(@user), :html => {:method => :put} do |f|
  %h1 Reset Password
  .fields
    .field
      = f.label :email
      %br
      = @user.email
    .field
      = f.label :password
      %br
      = f.password_field :password
    .field
      = f.label :password_confirmation
      %br
      = f.password_field :password_confirmation
    = hidden_field_tag :token, @token
  .actions
    = f.submit