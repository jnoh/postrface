= form_tag login_path, :method => :post do
  = render 'common/flash_messages', :flash => flash
  .fields
    .field
      = label_tag :username
      = text_field_tag :username, "", :placeholder => "Username"
    .field
      = label_tag :password
      = password_field_tag :password, "", :placeholder => "Password"

  .actions
    = submit_tag "Log In", :class => "btn primary"

    .forgot
      = link_to "Forgot password?", new_password_reset_path, :class => "btn"
